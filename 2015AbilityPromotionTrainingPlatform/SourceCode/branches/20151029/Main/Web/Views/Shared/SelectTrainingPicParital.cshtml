<div class="modal-dialog modal-lg">
  <div class="modal-content" style="width:900px;margin:30px auto;">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title">选择图片</h4>
    </div>
    <div class="modal-body">

      <div class="clearfix">
        @*<label class="i">
          <span class="name">图片名称</span>
          <div class="thumb"><img src="/jnpx/dist/resource/user/5-80x80.png"></div>
          <div class="int"><input type="checkbox"></div>
        </label>*@
          @for (int i = 0; i < 24; i++)
          {
              <label class="i">
                  <span class="name">图片名称</span>
                  <div class="thumb"><img src="/Resources/Images/member_default_120_120.jpg" width="80" height="80"></div>
                  <div class="int"><input type="checkbox"></div>
              </label>
          }
      </div>

    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-success" onclick="doSelectPictureSubmit(this)" style="width:150px;">提交</button>
      <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
    </div>
  </div>
</div>

<script type="text/javascript">
    function doSelectPictureSubmit(e) {
        var selectPics = $(e).parent().prev().find('.i input[type=checkbox]:checked');
        if (selectPics.length > 1) {
            alert('只能选择一张图片！');
        }
        else if (selectPics.length == 0) {
            alert('请选择一张图片');
        }
        else {
            var pic = selectPics.parent().prev().children().attr('src');
            //在父窗体中定义AfterSelectPictureSubmit(data)方法
            window.parent.AfterSelectPictureSubmit(pic);
        }
    }
</script>