@using Dianda.AP.Model.Course.CourseCreate;

@{
    ViewBag.Title = "编辑阅读";
    Layout = "../Shared/_Layout.cshtml";
}

<script type="text/javascript" src="@Url.Content("/Resources/Scripts/Course/CourseActivityReadingEdit.js")"></script>

<div class="d-h">
    <div class="container">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
        <div class="d-form">
            <ol class="breadcrumb">
            <li><a href="CourseDetail?TrainingId=@ViewBag.TrainingId">课程制作</a></li>
            <li><a href="CourseActivityAdd?TrainingId=@ViewBag.TrainingId">添加学习活动</a></li>
            <li class="active">阅读文本</li>
            </ol>
            <div id="blk_ct_course_activity_reading" class="blk_ct_course_activity_reading">
                <h4 class="text-center">编辑学习活动 - 阅读文本（@ViewBag.TrainingInfo.Title）</h4>
                <div class="row">
                  <div class="col-xs-12">
                    <div class="form-group">
                      <label class="control-label">标题<span class="text-danger">*</span><span class="input-valid" style="color:#ff0000;font-weight:normal;display:none;" validfor="txtTitle">此项为必填内容</span></label>
                      <input id ="txtTitle" type="text" class="form-control" maxlength="30" value ="@ViewBag.ActivityReadingModel.Title">
                    </div>
                  </div>
                  <div class="col-xs-3">
		                <div class="form-group">
			                <label class="control-label">排序 <span class="text-danger">*</span><span class="input-valid" style="color:#ff0000;font-weight:normal;display:none;" validfor="txtSort">此项为必填内容</span><span class="input-valid" style="color:#ff0000;font-weight:normal;display:none;" validfor="txtSort" validtype="number">此项必须为非负整数</span></label>
			                <input id ="txtSort" type="text" class="form-control" value ="@ViewBag.ActivityReadingModel.Sort">
		                </div>
	              </div>
                  <div class="col-xs-4">
                    <div class="form-group">
                      <label class="control-label">预计时长 <span class="text-danger">*</span><span class="input-valid" style="color:#ff0000;font-weight:normal;display:none;" validfor="txtTimeLength">此项为必填内容</span><span class="input-valid" style="color:#ff0000;font-weight:normal;display:none;" validfor="txtTimeLength" validtype="number">此项必须为非负整数</span></label>
                      <input id ="txtTimeLength" type="text" class="form-control" maxlength="30" style="width:120px;" value ="@ViewBag.ActivityReadingModel.TimeLength"> 分钟
                    </div>
                  </div>
	                <div class="col-xs-12">
		                <div class="form-group">
			                <label class="control-label">内容 <span class="text-danger">*</span><span class="input-valid" style="color:#ff0000;font-weight:normal;display:none;" validfor="areaContent">此项为必填内容</span><span class="input-valid" style="color:#ff0000;font-weight:normal;display:none;" validfor="areaContent" validtype="maxlength">此项内容最多输入4000个字符</span></label>
			                <textarea id ="areaContent" class="form-control" style="height:200px;resize:none;">@ViewBag.ActivityReadingModel.Content</textarea>
		                </div>
	                </div>
                  <div class="col-xs-6">
		                <div class="form-group">
			                <label class="control-label">开放日期 <span class="text-danger">*</span><span class="input-valid" style="color:#ff0000;font-weight:normal;display:none;" validfor="txtAfterOpenDayNum">此项为必填内容</span><span class="input-valid" style="color:#ff0000;font-weight:normal;display:none;" validfor="txtAfterOpenDayNum" validtype="number">此项必须为非负整数</span></label>
			                <label class="chk" style="width:200px;">
				                <input id ="radioAlreadyOpen" type="radio" name="OpenTime" value="1" checked> 始终开放
			                </label>
			                <label class="chk" style="width:200px;">
				                <input id ="radioPartialOpen" type="radio" name="OpenTime" value="2"> 开班后 <input id ="txtAfterOpenDayNum" type="text" name="name" value="" style="width:50px;"> 天
			                </label>
		                </div>
	                </div>
                  <div class="col-xs-6">
		                <div class="form-group">
			                <label class="control-label">截止日期 <span class="text-danger">*</span><span class="input-valid" style="color:#ff0000;font-weight:normal;display:none;" validfor="txtAfterEndDayNum">此项为必填内容</span><span class="input-valid" style="color:#ff0000;font-weight:normal;display:none;" validfor="txtAfterEndDayNum" validtype="number">此项必须为非负整数</span></label>
			                <label class="chk" style="width:200px;">
				                <input id ="radioAlreadyEnd" type="radio" name="EndTime" value="1" checked> 无截止日期
			                </label>
			                <label class="chk" style="width:200px;">
				                <input id = "radioPartialEnd" type="radio" name="EndTime" value="2"> 开班后 <input id ="txtAfterEndDayNum" type="text" name="name" value="" style="width:50px;"> 天截止
			                </label>
		                </div>
	                </div>
	                <div class="col-xs-12">
		                <hr>
		                <button id = "btnSubmit" class="btn btn-success" style="width:150px;">提交</button>
		                &nbsp;&nbsp;&nbsp;&nbsp;<a href="/Course/CourseCreate/CourseDetail?TrainingId=@ViewBag.TrainingId">返回</a>
	                </div>
                </div>
            </div>
        </div>
        </div>
    </div>
    </div>
</div>

<script>
    var Id = "@ViewBag.ActivityReadingModel.Id";
    var UnitId = "@ViewBag.ActivityReadingModel.UnitId";
    var OpenTime = "@ViewBag.ActivityReadingModel.OpenTime";
    var EndTime = "@ViewBag.ActivityReadingModel.EndTime";
</script>
