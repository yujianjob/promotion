@using Dianda.AP.Model;
@using Dianda.Common;
@{
    ViewBag.Title = "培训公告管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> planlist = ViewData["Plan"] as List<SelectListItem>;
    List<News_Detail> list = ViewBag.GetList as List<News_Detail>;
    string wheretype = ViewData["wheretype"] == null ? "" : ViewData["wheretype"].ToString();
    string whereplan = ViewData["whereplan"] == null ? "" : ViewData["whereplan"].ToString();
    int GroupId = Convert.ToInt32(ViewData["GroupId"]);
}

@{
    Layout = "~/Views/Shared/LinkLayout.cshtml";
}

@{
    List<SelectListItem> newslist =  new List<SelectListItem>(){
            new SelectListItem{Text="市级公告",Value="1"},
            new SelectListItem{Text="区级公告",Value="2"},
            new SelectListItem{Text="培训机构公告",Value="3"},
            new SelectListItem{Text="校级公告",Value="4"}
    };
}

<script type="text/javascript">

    function del(id) {
        $('#modal-edit-status .modal-title').text("确定删除吗？");
        $('#btnOK').attr("onclick", "ActivityDisplay(" + id + ");");

        $('#modal-edit-status').modal({
            keyboard: false,
            backdrop: 'static'
        });
    }

    function ActivityDisplay(id) {
        $.ajax({
            url: '@Url.Action("NewsDel")',
            type: 'get',
            data: { id: id },
            cache: false,
            datatype: 'text',
            success: function (data) {
                if (data == "no:超时")
                {
                    location.href = "/Entrance/Login/Index";
                }
                var res = data.split(':');
                if (res[0] == 'yes') {
                    window.location.href = '/Prepare/News/Index?pageIndex=@QueryString.UrlEncrypt(ViewData["pageIndex"])&wheretype=@ViewData["wheretype"]&whereplan=@ViewData["whereplan"]';
                }
                else if (res[0] == 'no') {
                    Alert(res[1]);
                    return false;
                }
                else {
                    alert('未知错误！');
                    window.location.href = '/Prepare/News/Index?pageIndex=@QueryString.UrlEncrypt(ViewData["pageIndex"])&wheretype=@ViewData["wheretype"]&whereplan=@ViewData["whereplan"]';
                }
            },
            error: function (xmlHttpRequest, errorMessage, exception) {
                alert(errorMessage);
            }
        });
    return false;
}
</script>

<div class="d-h">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="d-page-title">培训公告</div>
                <hr>
                <div id="blk_ln_course_notice" class="blk_ln_course_notice">
                    <div class="d-search">
                        @using (Html.BeginForm("Index", "News", FormMethod.Post, new { @class = "form-inline" }))
                        {
                            <div class="form-group">
                                @Html.DropDownList("wheretype", newslist, "请选择公告", new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.DropDownList("whereplan", planlist, "请选择学期", new { @class = "form-control" })
                            </div>
                            <div style="display: none;">
                                <input type="submit" value="查询" class="btn-1" />
                            </div>
                        }
                        <div class="action">
                            <a href="/Prepare/News/NewsAdd" class="btn btn-success">发布公告</a>
                        </div>
                    </div>
                    <hr>
                        @if (list.Count > 0)
                        {
                            for (int i = 0; i < list.Count; i++)
                            { 
                            
                             <div class="i" style="word-break:break-all; word-wrap:break-word;">
                                 <a href="/Prepare/News/Details?id=@QueryString.UrlEncrypt(list[i].Id)&State=@QueryString.UrlEncrypt("Index")"><span class="title">@list[i].Title</span></a>
                                <span class="date">@list[i].PublishDate.ToString("yyyy-MM-dd")</span>
                                @if(list[i].Content.Length>50)
                                {
                                    <div class="content">@list[i].Content.Substring(0,50) ...</div>
                                }else
                                {
                                    <div class="content">@list[i].Content</div>
                                }
                                <div class="action">
                                    <a href="/Prepare/News/NewsEdit?id=@QueryString.UrlEncrypt(list[i].Id)">编辑</a>
		                            <a href="#" onclick="del('@list[i].Id')">删除</a>
                                </div>
                            </div>
                            }
                        }
                        else
                        {
                            <div id="blk_ct_course_list" class="d-courseauthor-list blk_ct_course_list">
                             <h4 class="No_Content_Title">暂无信息……</h4>
                            <hr>
                            </div>
                        }
                    <hr>
                    <div class="d-pagination clearfix">
                        <div class="pull-left">
                            当前页<span>@ViewData["pageIndex"]</span>
                            @if (@ViewData["pageCount"].ToString() == "0")
                            {
                                <span>总页数 1</span>
                            }
                            else
                            {
                                <span>总页数 @ViewData["pageCount"]</span>
                            }
                            总记录<span>@ViewData["recordCount"]</span>
                            每页显示条数<span>@ViewData["pageSize"]</span>
                        </div>
                        <div class="pull-right text-right">
                            <a id="HomePage" href="/Prepare/News/Index?PageIndex=@QueryString.UrlEncrypt(1)&wheretype=@wheretype&whereplan=@whereplan">首页</a>

                            <a id="OnPage" href="/Prepare/News/Index?PageIndex=@QueryString.UrlEncrypt(int.Parse(ViewData["pageIndex"].ToString()) - 1)&wheretype=@wheretype&whereplan=@whereplan">上一页</a>

                            <a id="NextPage" href="/Prepare/News/Index?PageIndex=@QueryString.UrlEncrypt(int.Parse(ViewData["pageIndex"].ToString()) + 1)&wheretype=@wheretype&whereplan=@whereplan">下一页</a>

                            <a id="LastPage" href="/Prepare/News/Index?PageIndex=@QueryString.UrlEncrypt(int.Parse(ViewData["pageCount"].ToString()))&wheretype=@wheretype&whereplan=@whereplan">尾页</a>
                            跳转到第<input type="text" class="form-control input-sm" id="GoPageIndex" onkeyup="this.value=this.value.replace(/\D/g,'')" onafterpaste="this.value=this.value.replace(/\D/g,'')">页
	
                            <button class="btn btn-sm" id="GoBtn">» </button>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<div id="modal-edit-status" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content d-form" style="padding:0;">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <div class="modal-title"></div>
        </div>
    
        <div class="modal-footer">
            <button id ="btnOK" type="button" class="btn btn-success">确认</button>
            <button id ="btnCancel" type="button" class="btn btn-default" data-dismiss="modal">取消</button>
        </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $proto.init(function () {
            $('input.input-date').datepicker({});
        });
    });
    $("#GoBtn").click(function () {      //输入页数跳转页面
        var index = $("#GoPageIndex").val();
        var pagecount = "@ViewData["pageCount"].ToString()";
        if (pagecount == "0") {
            pagecount = "1";
        }
        if (index == "0") {
            Alert('请输入正确的页数！！！');
            return false;
        }
        else if (parseInt(index) > parseInt(pagecount))
        {
            Alert('输入的页数不存在！！！');
            return false;
        }
        if (index == "" || index == null) {
            Alert('请输入跳转页！！！');
            return false;
        } else {
            location.href = '/Prepare/News/Index?wheretype=@ViewData["wheretype"]&whereplan=@ViewData["whereplan"]&pageIndex=' + UrlEncode(index) + '';
        }
    });

    $(document).ready(function () {     //页面加载事件
        var index = "@ViewData["pageIndex"]", count = "@ViewData["recordCount"]", pagecount = "@ViewData["pageCount"]";
        if (index == "1") {
            $("#HomePage").css("color", "#BEBEBE").removeAttr("href");
            $("#OnPage").css("color", "#BEBEBE").removeAttr("href");
        }
        if (parseInt(count) < 10 || index == pagecount) {
            $("#NextPage").css("color", "#BEBEBE").removeAttr("href");
            $("#LastPage").css("color", "#BEBEBE").removeAttr("href");
        }
    })

    $("#wheretype").change(function () {
        $(".btn-1").click();
    });

    $("#whereplan").change(function () {
        $(".btn-1").click();
    });

    function UrlEncode(code) {
        var EnCode = "";
        var obj = JSON.stringify({ Code: code });
        $.ajax({
            cache: false,
            async: false,
            type: 'post',
            contentType: 'application/json',
            url: '/Course/CourseCreate/EnCode',
            data: obj,
            dataType: 'json',
            success: function (data) {
                if (!data || !data.Data || data.Data.length == 0) {
                    return;
                }

                EnCode = data.Data;
            },
            error: function () {
            }
        });

        return EnCode;
    }
</script>
