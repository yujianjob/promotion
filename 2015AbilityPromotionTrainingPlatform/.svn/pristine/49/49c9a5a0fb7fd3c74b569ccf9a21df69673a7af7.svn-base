@using Dianda.AP.Model.Prepare.ClassAddressList;;
@{
    ViewBag.Title = "班级通讯录";
    Layout = "~/Views/Shared/LinkLayout.cshtml";
}

<div class="d-h">
      <div class="container">
        <div class="row">
          <div class="col-xs-11">
				<div class="course-bar">
					<span class="back"><span class="glyphicon glyphicon-chevron-left"></span></span>
					<a href="/Course/CourseCreate/CourseLearn?TrainingId=@ViewBag.TrainingId&ClassId=@ViewBag.ClassId" class="title">@ViewBag.TrainingInfo.Title</a>
				</div>
            <div id="blk_ln_course_classmate" class="blk_ln_course_classmate">
                <h3>班级通讯录</h3>
                <hr>
                <div class="clearfix">
	                @foreach (AddressList item in ViewBag.MemberInfo)
                     {
                       <div class="i">
		                    <span class="name">@item.RealName</span>
                            @if (item.MemberType == 1)
                            {
                                <span class="title">(讲师)</span>
                            }
                            else if (item.MemberType == 2)
                            {
                                 <span class="title">(辅导员)</span>
                            }
                            else
                            {
                                <span class="title">&nbsp;</span>
                            }
		                    <div class="unit">@item.Title</div>
		                    <div class="tel">@item.Mobile</div>
		                    <div class="emial">@item.Email</div>
		                    <div class="thumb"><img src="@item.Pic" width ="80px" height ="80px"></div>
	                    </div>
                     }
                </div>
            </div>
          </div>
          <div class="col-xs-1">
            <div class="d-section-menu">
                <a href="/Prepare/ClassAddressList/Index?TrainingId=@ViewBag.TrainingId&ClassId=@ViewBag.ClassId" class="i">班级通讯录</a>
                <a href="/Prepare/ClassMessage/List?TrainingId=@ViewBag.TrainingId&ClassId=@ViewBag.ClassId" class="i">班级通知</a>
                <a href="/Learn/LearnOnLine/LearnNoteView?TrainingId=@ViewBag.TrainingId" class="i">笔记本</a>
                <a href="/Learn/LearnOnLine/LearnOnLineEvaluateView?TrainingId=@ViewBag.TrainingId&ClassId=@ViewBag.ClassId" class="i">课程评价</a>
            </div>
          </div>
        </div>
      </div>
    </div>