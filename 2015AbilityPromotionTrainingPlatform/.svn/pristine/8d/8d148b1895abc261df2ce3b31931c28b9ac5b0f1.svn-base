            }

            $.ajax({
                type: 'get',
                url: '/ClassTeacher/AddClassGroupMember',
                data: { classId: $('#classId').val(), groupTitle: $('#gtitle').val(), accountIds: ids },
                contentType: 'application/json',
                dataType: "text",
                success: function (data) {
                    var result = $.parseJSON(data);
                    if (result.Code == 0) {
                        Alert(result.Msg);
