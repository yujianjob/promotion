@using Dianda.AP.Model;
@model Dianda.AP.Model.Class_Notice
@{
    ViewBag.Title = "班级通知新增";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    Layout = "~/Views/Shared/LinkLayout.cshtml";
}

<script type="text/javascript" src="~/Resources/Scripts/jquery.validate.js"></script>
<script type="text/javascript" src="~/Resources/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm("Add", "ClassMessage", FormMethod.Post))
{
    <div class="d-h">
        <div class="container">
            <div class="row">
                <div class="col-xs-10 col-xs-offset-1">
                    <div class="d-form">
                        <ol class="breadcrumb">
                            <li><a href="/Prepare/ClassMessage/Index?ClassId=@ViewData["ClassId"]">班级公告</a></li>
                            <li class="active">班级公告</li>
                        </ol>
                        <div id="blk_announcement_add" class="blk_announcement_add">
                            <h4 class="text-center">发布公告</h4>
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="form-group" style ="display:none;">
                                        <label class="control-label">@Html.LabelFor(model => model.ClassId) <span class="text-danger">*</span></label>
                                        @Html.TextBoxFor(model => model.ClassId, new { @class = "form-control", @maxlength = "30" })
                                        <p style="color: red;">@Html.ValidationMessageFor(model => model.ClassId)</p>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">@Html.LabelFor(model => model.Title) <span class="text-danger">*</span></label>
                                        @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @maxlength = "30" })
                                        <p style="color: red;">@Html.ValidationMessageFor(model => model.Title)</p>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="form-group">
                                        <label class="control-label">@Html.LabelFor(model => model.Content) <span class="text-danger">*</span></label>
                                        @Html.TextAreaFor(model => model.Content, new { @class = "form-control",@maxlength="4000", @style = "height: 300px;" })
                                        <p style="color: red;">@Html.ValidationMessageFor(model => model.Title)</p>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="form-group">
                                        <label class="control-label">@Html.LabelFor(model => model.Display) <span class="text-danger">*</span></label>
                                        @Html.EditorFor(model => model.Display)
                                        <p style="color: red;">@Html.ValidationMessageFor(model => model.Display)</p>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    @*<button class="btn btn-success" style="width: 150px;">提交</button>*@
                                    <input type="submit" class="btn btn-success" id="submit" value="提交" />
                                    &nbsp;&nbsp;&nbsp;&nbsp;<a href="/Prepare/ClassMessage/Index?ClassId=@ViewData["ClassId"]">取消</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script>
    $(function () {
        $proto.init(function () {
            /* 页面加载后立即执行的代码写在这里 */

            $('input.input-date').datepicker({ });


        });
    });
</script>
<script type="text/javascript">
    $(function () {
        $proto.init(function () {
            $(document).ready(function () {
                var classid = "@ViewData["ClassId"].ToString()";
                $("#ClassId").val(classid);
            })

            $("#submit").click(function () {
                var title = $("#Title").val();
                var content = $("#Content").val();
                if (title.length >= 100) {
                    Alert("标题长度不能超过100字！！！");
                    return false;
                } else if (content.length > 4000) {
                    Alert("内容长度不能超过4000字！！！");
                    return false;
                }
            })
        })
    });
</script>