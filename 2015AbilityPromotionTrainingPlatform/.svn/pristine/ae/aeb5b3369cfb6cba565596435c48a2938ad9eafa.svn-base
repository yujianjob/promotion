@{
    ViewBag.Title = "在线学习 - 作业[预览]";
    Layout = "~/Views/Shared/LinkLayout.cshtml";
}

<div class="d-h">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-bar">
                    <span class="back"><span class="glyphicon glyphicon-chevron-left"></span></span>
                    <a href="@Url.Action("../../Course/CourseCreate/CoursePreviewLearn", new { TrainingId = Dianda.Common.QueryString.Encrypt(ViewBag.TrainingId) })" class="title">@ViewBag.TraningDetailTitle</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="d-h">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div id="blk_ln_course_task" class="blk_ln_course_task" data-km-htm="blk_ln_course_task.html">
                    @if (ViewBag.Model_Course_UnitContent != null)
                    {
                        Dianda.AP.Model.Course_UnitContent Theme_Model = ViewBag.Model_Course_UnitContent;
                        <h3 style="word-break: break-all; word-wrap: break-word;">作业：@Theme_Model.Title</h3>
                        <p style="word-break: break-all; word-wrap: break-word;">@Theme_Model.Content</p>
                    }
                    <hr>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $proto.init(function () {
            /* 页面加载后立即执行的代码写在这里 */

        });
    });
</script>
