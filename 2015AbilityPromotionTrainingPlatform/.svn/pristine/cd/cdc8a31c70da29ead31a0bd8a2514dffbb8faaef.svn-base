//判断是否为非负整数
function isNotIntNum(num) {
    var re = /^[0-9]+$/;
    return re.test(num)
}

//判断是否为非负浮点数
function isNotFloatNum(num) {
    var re = /^\d+(\.\d+)?$/;
    return re.test(num)
}

function HtmlDecode(text) {
    var temp = document.createElement("div");
    temp.innerHTML = text;
    var output = temp.innerText || temp.textContent;
    temp = null;
    return output;
}