            //            $('#RegionId').empty();
            //            $('#RegionId').append('<option value="-1">全部学区</option>');
            //            $('#SchoolId').empty();
            //            $('#SchoolId').append('<option value="-1">全部学校</option>');
            //            for (var i = 0; i < myData.length; i++) {
            //                var item = myData[i];
            //                $('#RegionId').append('<option value="' + item.Id + '">' + item.Title + '</option>');
            //            }
            //        },
            //        error: function (XMLHttpRequest, textStatus, errorThrown) {
            //            if (XMLHttpRequest.status == 302) {
            //                eval(XMLHttpRequest.responseText);
            //            }
            //        }
            //    });
            //});

            $('#RegionId').change(function () {
                $.ajax({
                    url: 'AjaxSchool',
                    type: 'get',
                    data: { RegionId: $(this).val() },
                    dataType: 'text',
                    success: function (data) {
                        var myData = $.parseJSON(data);
                        $('#SchoolId').empty();
                        $('#SchoolId').append('<option value="-1">全部学校</option>');
                        for (var i = 0; i < myData.length; i++) {
                            var item = myData[i];
                            $('#SchoolId').append('<option value="' + item.Id + '">' + item.Title + '</option>');
